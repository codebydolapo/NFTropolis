{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
  },
  
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./types/global.d.ts", "backend/_index.js", "components/_Pintura.tsx", "components/easycrop/imgDialog.js"],
  "exclude": ["node_modules"],
}

